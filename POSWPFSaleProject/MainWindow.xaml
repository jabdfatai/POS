<Window x:Class="POSWPFSaleProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSWPFSaleProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="50">
            </RowDefinition>

            <RowDefinition>
            </RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Fill="#093C3C"  Grid.Row="0">
        </Rectangle>
        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition>
                </RowDefinition>



            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".7*">
                </ColumnDefinition>
                <ColumnDefinition Width=".3*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Canvas Grid.Row="0" Grid.Column="0">
                <!-- Outer Rectangle -->
                <Rectangle Height="318" Width="500"  Fill="LightGray" Stroke="DarkGray" StrokeThickness="1" Canvas.Left="50" Canvas.Top="25" RadiusX="10" RadiusY="10" HorizontalAlignment="Center" VerticalAlignment="Top" />

                <!-- Inner Rectangle -->
                <Rectangle Width="300" Height="75" Fill="Blue" Stroke="Black" StrokeThickness="2" Canvas.Left="125" Canvas.Top="62.5"/>
            </Canvas>

            <Rectangle  Grid.Column="1"  Fill="Black"  Stroke="DarkGray"  StrokeThickness="1" RadiusX="10" RadiusY="10" Margin="5,25,5,42"/>

        </Grid>

    </Grid>

</Window>
